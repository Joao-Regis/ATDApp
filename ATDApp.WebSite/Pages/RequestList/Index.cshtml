@page
@model ATDApp.WebSite.Pages.RequestList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Request List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Request</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Requests.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Requests.FirstOrDefault().RequestId"></label>
                        </th>
                        <th>
                            <label asp-for="Requests.FirstOrDefault().RequestDate"></label>

                        </th>
                        <th>
                            <label asp-for="Requests.FirstOrDefault().RequestType"></label>

                        </th>
                        <th>
                            <label asp-for="Requests.FirstOrDefault().LocationID"></label>

                        </th>
                        <th>
                            <label asp-for="Requests.FirstOrDefault().FirstName"></label>
                        </th>
                        <th>
                            <label asp-for="Requests.FirstOrDefault().LastName"></label>

                        </th>
                        <th>
                            <label asp-for="Requests.FirstOrDefault().Email"></label>

                        </th>
                        <th>
                            <label asp-for="Requests.FirstOrDefault().NumberRacksMarked"></label>

                        </th>
                        


                    </tr>
                    @foreach (var item in Model.Requests)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.RequestId)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.RequestDate)
                    <td>
                        @Html.DisplayFor(m => item.RequestType)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(m => item.LocationID)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.NumberRacksMarked)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.RequestId" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.RequestId" class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                    
                </tr>

                    }

                </table>
            }

            else
            {
                <p>No requests available</p>
            }
        </form>
    </div>


    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>

    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Location ID</th>
                    <th>First Name</th>
                    <th>Last Name </th>
                    <th>Email</th>
                    <th>Number of Racks Marked</th>
                    <th></th>

                </tr>
            </thead>
        </table>

    </div>

</div>
@section Scripts{ 
    <script src="~/js/requestList.js"></script>
}